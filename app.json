{
  "expo": {
    "plugins":[
      [
        "expo-image-picker",
        {
          "photoPermission": "accessed to photo",
          "cameraPermission": "accessed to camera"
        }
      ]
    ],
    "name": "Mạng xã hội học tập Neon",
    "slug": "awesome-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Neon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/Neon.png",
      "resizeMode": "contain",
      "backgroundColor": "#334053"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },  
      "package": "com.company.someapp",

      "permissions": [

        "CAMERA",
         "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    }
  }
}
